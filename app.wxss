/**app.wxss**/
/* 导入字体图标 */
@import "./styles/iconfont.wxss";

/* 清除默认样式 */
page,view,text,swiper,swiper-item,image,navigator{
  padding: 0;
  margin: 0;
  box-sizing: border-box;
}
view,text{
  font-family: Arial;
}

/* 
  主题颜色 通过变量来实现
  原生css个wxss都支持 变量
*/
page{
  /* 定义主题颜色 */
  --themeColor: #eb4450;
  /* 定义统一的字体大小 */
  font-size: 28rpx;
}
image{
  width: 100%;
}