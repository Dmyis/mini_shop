
@import "../../../../styles/iconfont.wxss";

.cart-top{
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 30rpx;
  background-color: #fff;
}
.hidden{
  visibility:hidden
}
.address-box{
  display: flex;
  flex: 5;
  color: #777;
  padding: 30rpx 20rpx;
}
.activeColor{
  color: #000;
}
.address{
  margin-top: 4rpx;
  font-size: 28rpx;
  margin-left: 10rpx;
}
.cut{
  color: #999;
}
.edit-box{
  padding:30rpx 20rpx 30rpx 30rpx;
  display: flex;
  flex: 1;
}





.element-wrapper {
  display: flex;
  position: fixed;
  left: 0;
  top: 0;
  height: 100%;
  width: 100%;
  overflow: hidden;
  z-index: 9999;
}

.background {
  background-color: rgba(0, 0, 0, 0);
  width: 100vw;
  height: 100vh;
  position: absolute;
  top: 0;
}

.bg {
  background-color: rgba(0, 0, 0, 0.4);
  width: 100vw;
  height: 100vh;
  position: absolute;
  top: 0;
  transition: background-color 1s ease 0;
}

.element {
  position: fixed;
  width: 100%;
  height: 80vh;
  border-top-left-radius: 30rpx;
  border-top-right-radius: 30rpx;
  bottom: 0;
  overflow: hidden;
  background-color: rgba(255, 255, 255, 1);
}
.picker_header{
  display: flex;
  position: relative;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  border-top-left-radius: 30rpx;
  border-top-right-radius: 30rpx;
}
.picker_header_text{
  flex: 1;
  font-size: 32rpx;
  font-weight: 600;
}
.right-bt {
  position: absolute;
  right: 0;
  width: 110rpx;
  font-size: 50rpx;
  color: #888;
}
.element_content{
  padding: 20rpx;
}
.w_check{
  margin-top: 10rpx;
}
.element_content_item{
  display: flex;
  height:90rpx;
  align-items: center;
}
.element_content_text{
  margin-left: 20rpx;
  font-size: 34rpx;
}
.addAddress_group{
  position: fixed;
  width: 100%;
  left: 0;
  bottom: 0;
  background-color: #fff;
  padding: 40rpx;
}
.addAddress{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 70rpx;
  font-size:30rpx;
  color: #fff;
  border-radius: 50rpx;
  background-color: var(--themeColor);
}

.getOpenSetting {
  margin-left:50%;
  margin-top: 40rpx;
  transform: translateX(-50%);
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 34rpx;
  color: #666;
}