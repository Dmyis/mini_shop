/* pages/cart/childCpns/w-tool/w-tool.wxss */
.cart_tool {
  display: flex;
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 90rpx;
  background-color: #fff;
}
.checkbox-group {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.total {
  flex: 4;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  font-size: 30rpx;
  color: #000;
}
.total_price{
  font-weight: 600;
}
.submit {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: var(--themeColor);
  border-radius: 50rpx;
  margin:15rpx 30rpx;
  color: #fff;
}