/* pages/cart/childCpns/w-tool/w-tool.wxss */
.cart_tool {
  display: flex;
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 90rpx;
  background-color: #fff;
  box-shadow: 0 -2px 2px rgba(0, 0, 0, .1);
}
.hidden{
  visibility:hidden
}
.checkbox-group {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.total {
  flex: 4;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  font-size: 30rpx;
  color: #000;
}
.total_price{
  font-weight: 600;
}
.submit {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: var(--themeColor);
  border-radius: 50rpx;
  margin:15rpx 30rpx;
  color: #fff;
}

/* 收藏功能 */
.edit_fun{
  height: 64rpx;
  display: flex;
  position: absolute;
  right: 0;
  top: calc( 50% - 32rpx);
}
.edit_coll,
.edit_delete{
  color: #444;
  border-radius: 50rpx;
  border: 1rpx solid #777;
  padding: 14rpx 40rpx;
  margin-right: 30rpx;
}