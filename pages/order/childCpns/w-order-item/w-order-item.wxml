<!--pages/order/childCpns/w-order-item/w-order-item.wxml-->
<view class="order_main">
  <view class="order_no_row">
    <view class="order_no_text">订单编号</view>
    <view class="order_no_value">{{order.order_number}}</view>
  </view>
  <view class="order_price_row">
    <view class="order_price_text">订单价格</view>
    <view class="order_price_value">¥{{order.order_price}}</view>
  </view>
  <view class="order_time_row">
    <view class="order_time_text">订单日期</view>
    <view class="order_time_value">{{order.create_time_cn}}</view>
  </view>
</view>