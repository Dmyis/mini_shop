
.goods_item {
  display: flex;
  border-top: 2rpx solid #ccc;
}

.goods_img_wrap {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}

.goods_img {
  width: 70%;
  padding: 20rpx 0;
}

.goods_info_wrap {
  flex: 3;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.goods_name {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.goods_price {
  color: var(--themeColor);
  font-size: 32rpx;
}