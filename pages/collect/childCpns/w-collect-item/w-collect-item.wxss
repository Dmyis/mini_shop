.collect_item{
  display: flex;
  background-color: #fff;
  justify-content: center;
  align-items: center;
  padding: 20rpx;
  height: 220rpx;
  border-bottom: 10rpx solid #F6F6F6;
}
.check{
  width: 0;
  opacity: 0;
  transition: .3s;
}
.check_show{
  opacity:1;
  width: 60rpx;
}
.goods_item {
  display: flex;
  justify-content: space-between;
  height: 200rpx;
}

.goods_img_wrap {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}

.goods_img {
  width: 200rpx;
  height: 100%;
  padding: 20rpx 0;
}

.goods_info_wrap {
  flex: 3;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.goods_name {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.goods_price {
  color: var(--themeColor);
  font-size: 32rpx;
}