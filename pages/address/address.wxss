/* pages/address/address.wxss */
page {
  background-color: #F6F6F6;
}

.addres_item {
  display: flex;
  padding: 40rpx;
  margin-bottom: 10rpx;
  justify-content: space-between;
  align-items: center;
  background-color: #fff;
}

.address_info_group {
  flex: 6;
}

.address_info {
  font-size: 36rpx;
  color: #000;
  font-weight: 600;
  font-family: -apple-system, Helvetica, sans-serif;
  margin-bottom: 10rpx;
}

.address_name {
  margin-right: 20rpx;
}

.address_detail {
  font-size: 34rpx;
  color: #666;
}

.address_edit {
  flex: 1;
  text-align: right;
  font-size: 32rpx;
  color: var(--themeColor);
}

.getOpenSetting {
  margin-left:50%;
  margin-top: 40rpx;
  transform: translateX(-50%);
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 34rpx;
  color: #666;
}
.addAddress_group{
  position: fixed;
  width: 100%;
  left: 0;
  bottom: 0;
  background-color: #fff;
  padding: 40rpx;
}
.addAddress{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 70rpx;
  font-size:30rpx;
  color: #fff;
  border-radius: 50rpx;
  background-color: var(--themeColor);
}