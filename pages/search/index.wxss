/* pages/search/index.wxss */
page {
  padding: 20rpx;
}

.search_row {
  height: 80rpx;
  display: flex;
  position: relative;
}
.search_x{
  position: absolute;
  right: 120rpx;
  z-index: 99;
  height: 40rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 40rpx;
  color: #fff;
  background-color: #B2B2B2;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 20rpx;
  font-size: 34rpx;
}
.search_int {
  flex: 5;
  height: 100%;
  padding-left: 20rpx;
  border-top-left-radius: 40rpx;
  border-bottom-left-radius: 40rpx;
  background-color: #F6F6F6;
}

.search_qx {
  flex: 1;
  width: 110rpx;
  height: 100%;
  font-size: 26rpx;
  padding: 0;
  border-top-right-radius: 40rpx;
  border-bottom-right-radius: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.search_content {
  margin-top: 30rpx;
}

.search_nav {
  border-bottom: 1rpx solid #ddd;
  padding: 40rpx 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.search_res {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  width: 80%;
}

.icon-zuoshangjiao {
  font-size: 30rpx;
  color: #8C8C8C;
  margin-right: 20rpx;
}